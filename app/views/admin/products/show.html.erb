<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Saleprice:</b>
  <%= @product.saleprice %>
</p>

<p>
  <b>Status:</b>
  <%= @product.status %>
</p>

<% if @product.stocks.any? %>
<div>
<% @product.stocks.each do |stock| %>
<p><%= stock.typename %>:<%= stock.amount ? stock.amount : "未指定庫存數量" %></p>
<% end %>
</div>
<% end %>

<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<% if @product.stocks.any? %>
<%= link_to 'Stock', stock_admin_product_path(@product) %> |
<% end %>
<%= link_to 'Back', admin_products_path %>