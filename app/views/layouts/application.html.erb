<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if current_member %>
	<%= current_member.email %> <%= link_to "登出", destroy_member_session_path, :method => :delete %>
	<% else %>
	<%= link_to "登入", new_member_session_path %>
	<% end %>
	<ul class = "nav">
		<li><a href="/">首頁</a></li>
		<li><a href="<%= service_root_path %>">顧客中心</a></li>
		<li><a href="/orders/cart">購物車</a></li>
	</ul>

	<% if params[:controller].split('/').first == "service" %>

	<ul style="float: left;"><li><a href="<%= service_orders_path %>">訂單</a></li></ul>
	<div style="float: left; margin-left: 10px;">
		<%= yield %>
	</div>

	<% else %>
	<%= yield %>
	<% end %>

</body>
</html>
