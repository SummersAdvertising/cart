<p class="alert"><%= alert %></p>
<% if @address.errors.any? %>
<p style="color:red">
	<% @address.errors.full_messages.each do |message| %>
	<%= message %><br>
	<% end %>
</p>
<% end %>

<div class="box">
	<h4>new address</h4>
	<%= form_for(@address, :url => service_addressbooks_path, :method => :post) do |f| %>
	<p>*地址：<%= f.text_field :address %></p>
	<%= f.submit %>
	<% end %>
</div>

<% if @addresses && @addresses.length > 0 %>

<% @addresses.each do |addressbook| %>
<p><%= addressbook.address %> <%= link_to "刪除", service_addressbook_path(addressbook), :method => :delete %></p>
<% end %>

<% else %>

<p>尚未建立常用地址。</p>

<% end %>